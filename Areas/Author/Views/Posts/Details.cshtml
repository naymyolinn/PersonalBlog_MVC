@model personalblog.Models.ViewModels.PostCommentVM

<!-- Page Header -->
  <header class="masthead" style='background-image: url(@Url.Content("~/img/post-bg.jpg"))'>
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1>@Html.DisplayTextFor(m=>m.Post.Title)</h1>
            <h2 class="subheading">@Model.Post.Subtitle</h2>
            <span class="meta">Posted by
              <a href="#">@Model.Post.Author.UserName</a>
              on @(String.Format("{0: MMMM dd yyyy}", Model.Post.CreatedAt))
              </span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
 
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          @Html.Raw(Model.Post.Body)
        </div>        
      </div>
    </div>
  </article>
 
  <section  class="mb-5">
<div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
<form asp-route-area="Author" asp-controller="Posts" asp-action="details" >
  <input  type="hidden" asp-for="PostId" />
      <div class="form-group row">
                <label asp-controller="Posts" asp-for="CommentText" class="col-md-2 control-label-comment"></label> 
                <div class="col">
                <textarea asp-controller="Posts" asp-for="CommentText" class="form-control" >
                </textarea>
                <span asp-validation-for="CommentText" class="text-danger"></span>
                </div>
      </div>
             <div class="form-group">
               <div class="col-md-2"></div>
               <div class="col">
                <input   type="submit" value="Add" class="btn btn-primary" />
               </div>
            </div>
            </form>
      </div>
      
    </div>
     </div>
  </div>
  </section>

  <section>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
           
       <ul class="list-unstyled">
         @foreach (var item in Model.Post.Comment) {
  <li class="media mb-5">
    <img src="~/img/post-sample-image.jpg" class="img-thumbnail mr-3" alt="..." width="200px">
    <div class="media-body">       
      @item.CommentText
    </div>
  </li>
         }
  </ul>
  </div>
    
      </div>
    </div>
  </section>
  

<div class="container">
    <div class="row">
        
    </div>
    <a asp-action="Edit" asp-route-id="@Model.Post.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


