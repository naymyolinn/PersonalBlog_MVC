@model personalblog.Models.Post
  
  

<!-- Page Header -->
  <header class="masthead" style='background-image: url(@Url.Content("~/img/post-bg.jpg"))'>
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
           
            <h1>@Html.DisplayTextFor(m=>m.Title)</h1>
            <h2 class="subheading">@Model.Subtitle</h2>
            <span class="meta">Posted by
              <a href="#">@Model.Author.UserName</a>
              on @(String.Format("{0: MMMM dd yyyy}", Model.CreatedAt))
              <h2>@Html.DisplayFor(m => m.Comment.Count)</h2>
              </span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          @Html.Raw(Model.Body)         
      
        </div>
        
      </div>
    </div>
    
  </article>
  
